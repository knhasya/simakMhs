<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Mata Kuliah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="35dp"
        android:id="@+id/tvMatkulCat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nama Dosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNamaDosenCat"
        android:layout_below="@+id/tvMatkulCat"
        android:layout_alignLeft="@+id/tvMatkulCat"
        android:layout_alignStart="@+id/tvMatkulCat" />

    <TextView
        android:text="Hari, Tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHariTglCat"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_alignBaseline="@+id/tvKodeMatkulCat"
        android:layout_alignBottom="@+id/tvKodeMatkulCat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvNamaDosenCat"
        android:layout_marginTop="22dp"
        android:layout_alignLeft="@+id/tvNamaDosenCat"
        android:layout_alignStart="@+id/tvNamaDosenCat"
        android:layout_alignRight="@+id/tvHariTglCat"
        android:layout_alignEnd="@+id/tvHariTglCat"
        android:layout_marginBottom="15dp"
        android:id="@+id/listviewCat" />

    <TextView
        android:text="(Kode Mata Kuliah)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvKodeMatkulCat"
        android:layout_above="@+id/tvNamaDosenCat"
        android:layout_toRightOf="@+id/tvMatkulCat"
        android:layout_toEndOf="@+id/tvMatkulCat" />
</RelativeLayout>